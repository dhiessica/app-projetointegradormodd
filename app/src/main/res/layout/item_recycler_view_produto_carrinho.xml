<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/image_view_produto_carrinho_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_carrinho_preto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_nome_produto_carrinho_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Nome Produto"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/image_button_delete_produto_carrinho_item"
        app:layout_constraintStart_toEndOf="@+id/image_view_produto_carrinho_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Valor unitÃ¡rio: "
        android:textColor="@color/colorGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_produto_carrinho_item"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_carrinho_item" />

    <TextView
        android:id="@+id/text_view_valor_produto_carrinho_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="R$ 0.00"
        android:textColor="@color/colorGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/image_button_menos_produto_carrinho_item"
        app:layout_constraintStart_toEndOf="@+id/text_view_"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_carrinho_item" />

    <ImageButton
        android:id="@+id/image_button_menos_produto_carrinho_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_menos"
        app:layout_constraintEnd_toStartOf="@+id/text_view_quantidade_produto_carrinho_item"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_carrinho_item" />

    <TextView
        android:id="@+id/text_view_quantidade_produto_carrinho_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_marginHorizontal="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/image_button_mais_produto_carrinho_item"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_carrinho_item" />


    <ImageButton
        android:id="@+id/image_button_mais_produto_carrinho_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_mais"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_carrinho_item" />


    <ImageButton
        android:id="@+id/image_button_delete_produto_carrinho_item"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_cancel"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:tint="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>