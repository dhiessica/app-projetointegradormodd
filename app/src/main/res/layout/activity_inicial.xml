<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".InicialActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_logo_inicial"
            android:src="@mipmap/ic_logo_final_round"
            android:scaleType="fitCenter"
            android:foregroundGravity="center"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="64dp"
            android:layout_marginHorizontal="54dp"
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_inicial"
            android:scaleType="fitCenter"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="25dp"
            android:foregroundGravity="center"
            android:backgroundTint="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_below="@+id/image_view_logo_inicial"
            android:layout_above="@+id/linear_layout_slider_dots_inicial"
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linear_layout_slider_dots_inicial"
            android:src="@drawable/dot_active"
            android:scaleType="fitCenter"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:foregroundGravity="center"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:scaleType="fitCenter"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:backgroundTint="@android:color/transparent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_entrar_inicial"
                android:text="@string/button_entrar"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingHorizontal="30dp"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_cadastrar_inicial"
                android:text="@string/button_cadastrar"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingHorizontal="30dp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>