<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/image_view_produto_detalhes_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_carrinho_preto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_nome_produto_detalhes_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Nome Produto"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_produto_detalhes_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Valor unitÃ¡rio: "
        android:textColor="@color/colorGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_produto_detalhes_item"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_detalhes_item" />

    <TextView
        android:id="@+id/text_view_valor_produto_detalhes_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="R$ 0.00"
        android:textColor="@color/colorGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/text_view_quantidade_produto_detalhes_item"
        app:layout_constraintStart_toEndOf="@+id/text_view_"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_detalhes_item" />


    <TextView
        android:id="@+id/text_view_quantidade_produto_detalhes_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textColor="@color/colorGrey"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_produto_detalhes_item" />


</androidx.constraintlayout.widget.ConstraintLayout>